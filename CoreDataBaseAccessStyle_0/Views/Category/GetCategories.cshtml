@model List<CategoryResponseModel>
<h1><a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">Kategori Eklemek için tıklayınız</a></h1>
<hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Category Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CategoryResponseModel item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td> <a asp-action="UpdateCategory" asp-controller="Category" class="btn btn-warning" asp-route-id="@item.CategoryId">Güncelle</a>   </td>

                <td> <a asp-action="DeleteCategory" asp-controller="Category" class="btn btn-danger" asp-route-id="@item.CategoryId">Sil</a>   </td>
            </tr>
        }
        </tbody>
    </table>
